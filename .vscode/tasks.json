{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build my file",
            "command": "/usr/bin/g++",
            "args": [
                "--std",
                "c++23",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${fileDirname}/serialib.cpp",
                "${fileDirname}/Entity.cpp",
                "${fileDirname}/Player.cpp",
                "${fileDirname}/Enemy.cpp",
                "${fileDirname}/Photophobe.cpp",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}